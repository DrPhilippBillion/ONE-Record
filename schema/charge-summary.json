{
	"@context": {
    	"@vocab": "https://raw.githubusercontent.com/IATA-Cargo/ONE-Record/master/schema/charge-summary/",
    	"type": "@type",
    	"id": "@id"
    },
    "id": {
        "description": "URI of this logistics object",
         "required": true,
         "type": "text"
    },
    "type":  {
        "description": "Type of losgistics object, e.g. air waybill, booking, etc",
         "required": true,
         "type": "text"
    },
    "typeCode":  {
        "description": "Commonly useed codes for document type, e.g. jfwb, jfhl etc. Leave nlank if unknown",
        "type": "text"
    },
    "issuedBy":  {
        "description": "Internet of logistics identity code of issuing party.",
        "required": true,
        "type": "text"
    },
    "key":  {
        "description": "JSON field name of code that identifies this logistics object, e.g. 'waybill number', 'UPID' etc.",
        "required": true,
        "type": "text"
    },
    "charge-summary":
      {
      "Currency": {
         "description": "Currency details",
         "required": true,
         "type": "undefined"
      },
      "Prepaid": {
         "TotalWeightCharges": {
            "description": "Sum of WAYBILL_LINE SubTotalLineAmount (prepaid)",
            "required": true,
            "type": "numeric"
         },
         "TotalValuationCharges": {
            "description": "Valuation charge amount (prepaid)",
            "required": true,
            "type": "numeric"
         },
         "TotalTaxes": {
            "description": "Tax amount (prepaid)",
            "type": "numeric"
         },
         "TotalOtherChargesDueAgent": {
            "description": "Sum of OTHER_CHARGE Amount due Agent / Forwarder (prepaid)",
            "required": true,
            "type": "numeric"
         },
         "TotalOtherChargesDueCarrier": {
            "description": "Sum of OTHER_CHARGE Amount due Carrier (prepaid)",
            "required": true,
            "type": "numeric"
         },
         "TotalCharges": {
            "description": "Sum of Prepaid amounts",
            "required": true,
            "type": "numeric"
         }
      },
      "Collect": {
         "TotalWeightCharges": {
            "description": "Sum of WAYBILL_LINE SubTotalLineAmount (collect)",
            "required": true,
            "type": "numeric"
         },
         "TotalValuationCharges": {
            "description": "Valuation charge amount (collect)",
            "required": true,
            "type": "numeric"
         },
         "TotalTaxes": {
            "description": "Tax amount (collect)",
            "type": "numeric"
         },
         "TotalOtherChargesDueAgent": {
            "description": "Sum of OTHER_CHARGE Amount due Agent / Forwarder (collect)",
            "required": true,
            "type": "numeric"
         },
         "TotalOtherChargesDueCarrier": {
            "description": "Sum of OTHER_CHARGE Amount due Carrier (collect)",
            "required": true,
            "type": "numeric"
         },
         "TotalCharges": {
            "description": "Sum of Collect amounts",
            "required": true,
            "type": "numeric"
         },
         "InDestinationCurrency": {
            "TotalCharges": {
               "description": "Total Charges converted to destination currency as per CURRENCY conversion rate",
               "type": "numeric"
            },
            "CollectionCharge": {
               "description": "Collection charges in destination currency - e.g. additional amount charged for the service",
               "type": "numeric"
            },
            "GrandTotalCollectCharges": {
               "description": "Sum of TotalCharges and CollectionCharge",
               "type": "numeric"
            }
         }
      }
   }
}